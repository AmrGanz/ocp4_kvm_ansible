<network>
  <name>{{ cluster_name }}</name>
  <bridge name="{{ cluster_name }}"/>
  <forward/>
  <ip address="192.{{ network_subnet_octet }}.1" netmask="255.255.255.0">
    <dhcp>
      <range start="192.{{ network_subnet_octet }}.2" end="192.{{ network_subnet_octet }}.254"/>
      <host mac='{{ macbase }}07' ip='192.{{ network_subnet_octet }}.7'/>
      <host mac='{{ macbase }}08' ip='192.{{ network_subnet_octet }}.8'/>
      <host mac='{{ macbase }}09' ip='192.{{ network_subnet_octet }}.9'/>
{% for x in range(1, master_count | int +1)  %}
      <host mac='{{ macbase }}1{{ x }}' ip='192.{{ network_subnet_octet }}.1{{ x }}'/>
{% endfor %}
{% for x in range(1, worker_count | int +1)  %}
      <host mac='{{ macbase }}2{{ x }}' ip='192.{{ network_subnet_octet }}.2{{ x }}'/>
{% endfor %}
    </dhcp>
  </ip>
</network>
